{
  "name": "School Application System",
  "description": "A Laravel-based school application management system",
  "repository": "https://github.com/1Kwadwo/schoolapplication-entity",
  "logo": "https://laravel.com/img/logomark.min.svg",
  "keywords": ["laravel", "php", "school", "education"],
  "env": {
    "APP_NAME": {
      "description": "Application name",
      "value": "School Application System"
    },
    "APP_ENV": {
      "description": "Application environment",
      "value": "production"
    },
    "APP_DEBUG": {
      "description": "Application debug mode",
      "value": "false"
    },
    "APP_KEY": {
      "description": "Application encryption key",
      "generator": "secret"
    },
    "APP_URL": {
      "description": "Application URL",
      "value": "https://your-app-name.herokuapp.com"
    },
    "LOG_CHANNEL": {
      "description": "Log channel",
      "value": "stack"
    },
    "LOG_LEVEL": {
      "description": "Log level",
      "value": "error"
    },
    "DB_CONNECTION": {
      "description": "Database connection",
      "value": "pgsql"
    },
    "CACHE_STORE": {
      "description": "Cache store",
      "value": "database"
    },
    "SESSION_DRIVER": {
      "description": "Session driver",
      "value": "database"
    },
    "QUEUE_CONNECTION": {
      "description": "Queue connection",
      "value": "database"
    },
    "MAIL_MAILER": {
      "description": "Mail driver",
      "value": "log"
    },
    "MAIL_FROM_ADDRESS": {
      "description": "Mail from address",
      "value": "noreply@school.com"
    },
    "MAIL_FROM_NAME": {
      "description": "Mail from name",
      "value": "School Application System"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/php"
    }
  ],
  "scripts": {
    "postdeploy": "php artisan migrate --force && php artisan db:seed --force"
  }
}
